

@model MindfireSolutions.ViewModel.VMPersonalDetails

@{
    ViewBag.Title = "PersonalDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">

    <div class="col-xs-3" id="SideNav">
        @Html.Partial("_SideBar", Model)
    </div>
    <div class="col-xs-9">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="containern margin-top20">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.UserId)
                <div class="row">
                    <div class="col-sm-4 margin-top20">
                        <label class="control-label">Date of Birth :</label>
                        <input type='date' class="form-control" name="DOB" id="Date" value="@Model.DOB" />
                    </div>

                    <div class="form-group col-sm-5 margin-top20">
                        @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label" })
                        <select name="Gender" class="form-control">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Others">Others</option>
                        </select>
                    </div>
                </div>
                <div class="row margin-top20">
                    <div class="form-group col-sm-5 margin-top20">
                        <label class="control-label">Description <span>(160 charecters MAX)</span></label>
                        <textarea name="Description" value="@Model.Description" class="comment-control" style="background-color:#fff;color:black;" rows="6"></textarea>
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-5">
                        <div class="row margin-top20" id="AddSkills">
                            <label class="control-label">Skills <button type="button" class="btn btn-success" id="MoreSkills"><i class="fa fa-plus-square"></i></button></label>
                        </div>
                        <div class="row margin-top20">
                            <input type="text" name="Skills[]" class="form-control" value="" placeholder="Enter your Skills" />
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="row margin-top20" id="AddCompany">
                            <label class="control-label">Comapny <button type="button" class="btn btn-info" id="MoreCompany"><i class="fa fa-plus-square"></i></button></label>
                        </div>
                        <div class="row margin-top20">
                            <input type="text" name="Company[]" class="form-control" value="" placeholder="Enter Company Name" />
                        </div>
                    </div>

                </div>
                <div class="row margin-top20">
                    <div class="col-sm-offset-1">
                        <button type="submit" class="btn btn-primary">Save Details</button>
                    </div>
                </div>


            </div>
        }
    </div>
</div>
